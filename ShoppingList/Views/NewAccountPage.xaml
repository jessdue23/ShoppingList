<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.Views.NewAccountPage">
    <ContentPage.Content>
        <StackLayout Padding="20,20">
            <Label Text="Account Info" FontSize="Large" FontAttributes="Bold"></Label>
            <Border Stroke="Gray" StrokeThickness="1" Margin="15, 15,0,0">
                <Entry x:Name="txtUser" Placeholder="Enter username"></Entry>
            </Border>
            <Border Stroke="Gray" StrokeThickness="1" Margin="15, 15, 0,0">
                <Entry x:Name="txtPassword1" Placeholder="Enter Password" IsPassword="True"></Entry>
            </Border>
            <Border Stroke="Gray" StrokeThickness="1" Margin="15, 15, 0,0">
                <Entry x:Name="txtPassword2" Placeholder="Confirm Password" IsPassword="True"></Entry>
            </Border>
            <Border Stroke="Gray" StrokeThickness="1" Margin="15, 15, 0,60">
                <Entry x:Name="txtEmail" Placeholder="Enter Email Address" ></Entry>
            </Border>
            <Button Text="Create Account" Clicked="CreateAccount_OnClicked" BackgroundColor="Green" TextColor="White" FontAttributes="Bold" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>